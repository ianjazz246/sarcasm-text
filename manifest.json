{
  "manifest_version": 2,
  "name": "Sarcasm text",
  "version": "0.1",

  "description": "Changes all text to upper and lower case, emulating sarcastic text.",

  "icons": {
    "48": "icons/icon-light.svg",
    "96": "icons/icon-light.svg"
  },

  "permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "background.js"
    ]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/icon-light.svg",
    "default_title": "Make Sarcastic",
    "theme_icons": [{
      "light": "icons/icon-light.svg",
      "dark": "icons/icon-dark.svg",
      "size": 16
    }]
  }
}